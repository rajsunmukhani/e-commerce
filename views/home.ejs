            document.querySelector('body').scrollTo({
                top: offsetTop,
                behavior: 'smooth' 
            });
        }
        
        function scrollToTop() {
            document.querySelector('body').scrollTo({
                top: 0,
                behavior: 'smooth' 
            });
        }

